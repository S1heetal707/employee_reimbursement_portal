<div class="container mt-4">
  <h3 class="mb-4">New Company</h3>

  <%= form_with model: @company, local: true, class: 'needs-validation' do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
    <br>
    <div>
      <%= f.submit 'Create Company', class: 'btn main-btn' %>
    </div>
  <% end %>
</div>

